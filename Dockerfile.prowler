FROM public.ecr.aws/docker/library/amazonlinux:2

# Instala dependÃªncias
RUN yum install -y unzip tar gzip python3 jq awscli git && \
    pip3 install prowler && \
    yum clean all

# Copia seu script para dentro do container
COPY run-prowler.sh /usr/local/bin/run-prowler.sh
RUN chmod +x /usr/local/bin/run-prowler.sh

# Define entrypoint
ENTRYPOINT ["/usr/local/bin/run-prowler.sh"]
