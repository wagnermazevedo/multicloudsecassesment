# Dockerfile.prowler - Vers√£o Final (Wrapper garantido)
# =======================================================

FROM public.ecr.aws/docker/library/python:3.11-slim

USER root

ENV AWS_CLI_VERSION=2.15.55

# === 1. Depend√™ncias ===
RUN apt-get update -y && \
    apt-get install -y --no-install-recommends \
        bash \
        build-essential \
        libffi-dev \
        libssl-dev \
        pkg-config \
        curl \
        jq \
        unzip \
        dos2unix \
        git && \
    rm -rf /var/lib/apt/lists/*

# === 2. Instala AWS CLI v2 ===
RUN curl -s "https://awscli.amazonaws.com/awscli-exe-linux-x86_64-${AWS_CLI_VERSION}.zip" -o "awscliv2.zip" && \
    unzip -q awscliv2.zip && ./aws/install && rm -rf awscliv2.zip ./aws

# === 3. Instala Prowler ===
RUN echo "üêç Instalando Prowler via pip..." && \
    pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir prowler && \
    echo "‚úÖ Prowler instalado com sucesso."

# === 4. Cria wrapper execut√°vel garantido ===
RUN echo '#!/bin/bash' > /usr/local/bin/prowler && \
    echo 'exec python3 -m prowler "$@"' >> /usr/local/bin/prowler && \
    chmod +x /usr/local/bin/prowler && \
    /usr/local/bin/prowler --version

# === 5. Copia script principal ===
COPY run-prowler.sh /usr/local/bin/run-prowler.sh
RUN dos2unix /usr/local/bin/run-prowler.sh && chmod +x /usr/local/bin/run-prowler.sh

# === 6. PATH e valida√ß√£o ===
ENV PATH="/usr/local/bin:/usr/local/sbin:/usr/sbin:/usr/bin:/sbin:/bin"
RUN which prowler && prowler --version && which aws && aws --version

ENTRYPOINT ["/usr/local/bin/run-prowler.sh"]


