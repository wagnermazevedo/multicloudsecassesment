# Usa a imagem oficial do Prowler do ECR p√∫blico
FROM public.ecr.aws/prowler/prowler:latest

# Instala ferramentas extras se precisar (opcional)
RUN yum install -y jq awscli git && yum clean all

# Copia seu script customizado
COPY run-prowler.sh /usr/local/bin/run-prowler.sh
RUN chmod +x /usr/local/bin/run-prowler.sh

# Define entrypoint para rodar seu script
ENTRYPOINT ["/usr/local/bin/run-prowler.sh"]

